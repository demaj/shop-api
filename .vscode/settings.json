{
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/cvs": true,
    "**/.DS_Store": true,
    "**/.pytest_cache": true,
    "**/__pycache__": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.venv": true
  },
  "python.defaultInterpreterPath": ".venv/bin/python",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.analysis.extraPaths": ["app", "tests"],
  "python.autoComplete.extraPaths": ["app", "tests"]
}
